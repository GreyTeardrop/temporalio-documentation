{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "prHourlyLimit": 15,
  "regexManagers": [
    {
      "fileMatch": [
        "^docs/.*\\.md$"
      ],
      "matchStrings": [
        "(?<depName>temporalio/[a-z-]+):(?<currentValue>[0-9.]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "fileMatch": [
        "^docs/java/.*\\.md$"
      ],
      "matchStrings": [
        "<dependency>\\n\\s*<groupId>(?<groupId>io\\.temporal)<\/groupId>\\n\\s*<artifactId>(?<artifactId>[a-z-]+)<\/artifactId>\\n\\s*<version>(?<currentValue>[0-9.]+)<\/version>"
      ],
      "depNameTemplate": "{{{groupId}}}:{{{artifactId}}}",
      "datasourceTemplate": "maven",
      "versioningTemplate": "maven"
    }
  ]
}
