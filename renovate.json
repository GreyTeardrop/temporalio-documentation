{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "prHourlyLimit": 15,
  "regexManagers": [
    {
      "fileMatch": [
        "^docs/.*\\.md$"
      ],
      "matchStrings": [
        "(?<depName>temporalio/[a-z-]+):(?<currentValue>[0-9.]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "fileMatch": [
        "^docs/java/.*\\.md$"
      ],
      "matchStrings": [
        "<dependency>\\n\\s*<groupId>(?<groupId>io\\.temporal)<\/groupId>\\n\\s*<artifactId>(?<artifactId>[a-zA-Z0-9-]+)<\/artifactId>\\n\\s*<version>(?<currentValue>[0-9.]+)<\/version>",
        "(implementation|testImplementation)\\s+'(?<depName>io\\.temporal:[a-zA-Z0-9-]+):(?<currentValue>[0-9.]+)'"
      ],
      "depNameTemplate": "{{{groupId}}}:{{{artifactId}}}",
      "datasourceTemplate": "maven",
      "versioningTemplate": "maven"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "temporalio/.*"
      ],
      "groupName": "Temporal Docker Images"
    },
    {
      "matchDatasources": [
        "maven"
      ],
      "matchPackageNames": [
        "io\\.temporal:.*"
      ],
      "groupName": "Temporal Java SDK"
    }
  ]
}
